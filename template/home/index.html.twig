{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <span>Current date and time: {{ datestring }}</span>
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>{{ trailer.title }}</td>
                </tr>
            {% endfor %}
        </table>
        <form>
            <button>Get Last Trailers</button>
        </form>
        <div class="systeminfo">
            <span>Controller Class: {{ systeminfo['class'] }}</span>
            <span>Controller method: {{ systeminfo['method'] }}</span>
        </div>
    </div>
{% endblock %}
